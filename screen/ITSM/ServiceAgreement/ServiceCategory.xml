<!--            </field>-->
            <field name="fromDate">
                <header-field title="From Date" show-order-by="case-insensitive">
                    <date-time type="date"/>
                </header-field>
                <default-field title="From Date">
                <display/>
            </default-field></field>
            <field name="thruDate">
                <header-field title="Thru Date" show-order-by="case-insensitive">
                    <date-time type="date"/>
                </header-field>

                <default-field title="Thru Date">
                <date-time type="date"/>
            </default-field></field>
            <field name="submitButton"><header-field title="Find">
                <submit/>
            </header-field>
                <default-field title="Actions">
                    <submit text="Update" />
                    <link  url="deleteServiceCategory" text="Delete" />

                </default-field>
            </field>
        </form-list>
    </widgets>

</screen>
